<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane fx:id="headerFileListPane" dividerPositions="0.5"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"
           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
           stylesheets="@Gview.css" fx:controller="gview.gui.commitinfo.HeaderFileListCtrl">
    <AnchorPane>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <AnchorPane fx:id="stagedFileTopBox">
                <Label fx:id="stagedFileLabel" AnchorPane.leftAnchor="0.0" text="ステージ" />
                <CheckBox fx:id="stagedFileSelAll" AnchorPane.rightAnchor="0.0" text="すべて選択/非選択" nodeOrientation="RIGHT_TO_LEFT" />
            </AnchorPane>
            <TableView fx:id="stagedFileList" editable="true">
                <columns>
                    <TableColumn fx:id="stagedFileTypeColumn" editable="false" reorderable="false" text="種別" minWidth="50"/>
                    <TableColumn fx:id="stagedFilePathColumn" editable="false" reorderable="false" text="パス"/>
                    <TableColumn fx:id="stagedFileCheckColumn" reorderable="false" text=".." minWidth="20" maxWidth="20"/>
                </columns>
            </TableView>
            <AnchorPane fx:id="stagedFileBottomBox">
                <Button fx:id="commitButton"  AnchorPane.leftAnchor="0.0" text="コミット"/>
                <Button fx:id="unStageButton"  AnchorPane.rightAnchor="0.0" text="アンステージ"/>
            </AnchorPane>
        </VBox>
    </AnchorPane>
    <AnchorPane>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <AnchorPane fx:id="changedFileTopBox">
                <Label fx:id="changedFileLabel" AnchorPane.leftAnchor="0.0" text="更新"/>
                <CheckBox fx:id="changedFileSelAll" AnchorPane.rightAnchor="0.0" text="すべて選択/非選択" nodeOrientation="RIGHT_TO_LEFT"/>
            </AnchorPane>
            <TableView fx:id="changedFileList" editable="true">
                <columns>
                    <TableColumn fx:id="changedFileTypeColumn" editable="false" reorderable="false" text="種別" minWidth="50"/>
                    <TableColumn fx:id="changedFilePathColumn" editable="false" reorderable="false" text="パス"/>
                    <TableColumn fx:id="changedFileCheckColumn" reorderable="false" text=".." minWidth="20" maxWidth="20"/>
                </columns>
            </TableView>
            <AnchorPane fx:id="changedFileBottomBox">
                <Button fx:id="stageButton"  AnchorPane.leftAnchor="0.0" text="ステージ"/>
            </AnchorPane>
        </VBox>
    </AnchorPane>
</SplitPane>
