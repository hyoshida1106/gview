<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<Menu xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="workTreeMenu" text="ワークツリー(_W)"
      fx:controller="gview.gui.main.WorkTreeMenuCtrl" onShowing="#onShowingMenu">
    <MenuItem text="ステージ(_S)..." fx:id="workTreeStageMenu" accelerator="Shortcut+S"
              onAction="#onStageMenu">
        <graphic><FontIcon iconLiteral="mdi-arrow-up-bold-circle-outline"/></graphic>
    </MenuItem>
    <MenuItem text="アンステージ(_U)..." fx:id="workTreeUnStageMenu" accelerator="Shortcut+Shift+S"
              onAction="#onUnStageMenu">
        <graphic><FontIcon iconLiteral="mdi-arrow-down-bold-circle-outline"/></graphic>
    </MenuItem>
    <MenuItem text="コミット(_C)..." fx:id="workTreeCommitMenu" accelerator="Shortcut+C"
              onAction="#onCommitMenu">
        <graphic><FontIcon iconLiteral="mdi-checkbox-marked-circle-outline"/></graphic>
    </MenuItem>
</Menu>